<p id="notice"><%= notice %></p>

<h1>Todo Items</h1>

<h3>Incomplete</h2>

<table>
  <thead>
    <tr>
      <th>Done?</th>
      <th>Item</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incomplete_todo_items.each do |todo_item| %>
      <tr>
        <td><%= button_to "Complete", complete_todo_item_path(todo_item) %></td>
        <td><%= todo_item.title %></td>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Complete</h3>

<table>
  <thead>
    <tr>
      <th>Done?</th>
      <th>Item</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @complete_todo_items.each do |todo_item| %>
      <tr>
        <td><%= button_to "Uncomplete", uncomplete_todo_item_path(todo_item) %></td>
        <td><%= todo_item.title %></td>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

